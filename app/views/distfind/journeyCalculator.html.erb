

<%= form_with url: "/distance_profile", local: true, data: { turbo: false } do |f| %>


<div class="hero vh-100 d-flex align-items-center hero-calc-input-background">
    <div class="container base-container">

        <div class="row">
                <div class="col-md-12 text-center mt-5">
                    <h2> Carbon Travel Calculator <h2>
                         <p class="calculator-text"> Estimate the carbon emissions for your journey </p>
                </div>
        </div>

        <div class="row justify-content-center text-center mb-5">
            <div class="col-md-5 calculator-input-container">
                 <h3 class="text-dark" > Starting City <h3>
                     <p class="calculator-input"><%= text_field_tag :startingLocation %> </p>
            </div>

            <div class="col-md-5 calculator-input-container">
               <h3 class="text-dark" > Destination City <h3>
                <p class="calculator-input"><%= text_field_tag :finishLocation %> </p>
             </div>

             <div class="row">
                <div class=" d-flex col-md-12 justify-content-center">
                <p class="find-distance_button"> <%= submit_tag "Find Carbon Emissions",  class: "form-control-1 submit-tag submit-tag-button" %></p>
                </div>
             </div>





             
           
        </div>
              
        </div>

    </div>

</div>




<% end %>
 

                



